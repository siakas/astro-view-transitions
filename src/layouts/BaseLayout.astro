---
import '@/styles/globals.scss'
import '@fontsource/open-sans/400.css'
import '@fontsource/open-sans/600.css'
import '@fontsource/open-sans/700.css'
import { ViewTransitions } from 'astro:transitions'

interface Props {
  title: string
  image?: string
  description?: string
}

const {
  title,
  image = '/products/ryan-hoffman-A7f7XRKgUWc-unsplash.webp',
  description = 'A simple Shop built in Astro using View Transitions and Tailwind CSS',
} = Astro.props
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} - Astro Transitions Shop</title>
    <ViewTransitions />
  </head>
  <body class="bg-gradient-to-tl from-gray-500/5 via-transparent">
    <main
      class="relative mx-auto min-h-screen max-w-6xl px-4 py-6 pb-20 lg:pt-10"
    >
      <slot />
    </main>

    <style is:global>
      :root {
      }
      body {
        background-color: theme(colors.gray.50);
      }
    </style>
  </body>
</html>
